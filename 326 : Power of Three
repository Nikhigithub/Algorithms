class Solution {
    public boolean isPowerOfThree(int n) {
   // Soltuion - 1 :: With mod function
   //Taking a double value so i dont loose the last values after dividing 
   double N=n;  
           if (n < 1) {
            return false;
        }
    while(N%3==0){
          N=N/3;
      }   
      if(N==1){
        return true;
    }  
        
    return false;
    }
}
